{
  "name": "@zhid0399123/relit",
  "version": "0.0.1",
  "description": "Create release notes from changelog.md file",
  "main": "index.js",
  "bin": {
    "relit": "src/bin.js"
  },
  "scripts": {
    "lint": "standard --verbose",
    "lint:fix": "standard --fix",
    "test": "nyc tap \"test/**/*.test.js\" --check-coverage",
    "version": "cz bump",
    "relit": "relit create --count 1",
    "post:version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1 && git add CHANGELOG.md",
    "prepare": "node .husky/install.js"
  },
  "engines": {
    "node": ">=20",
    "npm": "10.2.4",
    "pnpm": "8.14.3"
  },
  "keywords": [
    "releases",
    "notes",
    "changelog",
    "tags"
  ],
  "author": "zhid0399123 <zhid0399123@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@zhid0399123/relit": "^0.0.1",
    "commist": "^3.2.0",
    "help-me": "^5.0.0",
    "split2": "^4.2.0",
    "yargs-parser": "^21.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhid0399123/relit.git"
  },
  "bugs": {
    "url": "https://github.com/zhid0399123/relit/issues"
  },
  "homepage": "https://github.com/zhid0399123/relit#readme",
  "devDependencies": {
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0"
  }
}
